<html>
  <head>
    <title>Attendance Tracker</title>
    <script src='https://cdn.firebase.com/js/client/2.2.1/firebase.js'></script>
    <script src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js'></script>
  </head>
  <body>
    <div id="inputs">
        <input type="text" id="nameField" placeholder="Name"></input></br>
        <textarea type="text" id="noteField" placeholder="Note"></textarea></br>
        <button id="addNote">Add Attendance</button></br>
        </br>
    </div>
    <div id="AttendanceList"></div>
    <script>
        var myDataRef = new Firebase('https://attendance-tracker.firebaseIO.com/');
        $('#addAttendance').click(function (e) {
            var name = $('#nameField').val();
            var note = $('#noteField').val();
            
            $('#noteField').val('');
            
            
            myDataRef.push({name: name, note: note, isDone: false});
            
            });
            
            myDataRef.on('child_added', function(snapshot) {
                var info = snapshot.val();
                displayAttendance(info.name, info.note, info.isDone);
            });
            
            function displayAttendance(name, org, contact) {
                $('<div/>').text(name).prepend($('<em/>').text(org)).appendTo($('#AttendanceList'));
                $('#AttendanceList')[0].scrollTop = $('#AttendanceList')[0].scrollHeight;
            };
            
    </script>
  </body>
</html>
